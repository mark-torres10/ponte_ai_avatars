{
  "manifest_version": 3,
  "name": "AI Avatar Sports Commentary",
  "version": "1.0.0",
  "description": "AI avatar that provides proactive sports commentary on ESPN NBA boxscore pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.espn.com/*"
  ],
  "background": {
    "service_worker": "background-script.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.espn.com/nba/boxscore/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Avatar Sports Commentary"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["avatar-icon.png"],
      "matches": ["https://www.espn.com/*"]
    }
  ]
}
